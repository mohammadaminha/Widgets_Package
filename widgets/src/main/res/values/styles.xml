    <style name="btn">
        <item name="android:padding">2dp</item>
        <item name="android:layout_margin">2dp</item>
        <item name="android:background">@color/GrayColorLight</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/GrayColorLight</item>
    </style>

    <style name="boxCard" parent="CardView">
        <item name="android:layout_margin">6dp</item>
        <item name="cardCornerRadius">6dp</item>
        <item name="cardElevation">6dp</item>
    </style>

    <style name="cardInsideRtl">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">rtl</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_gravity">right</item>
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">rtl</item>
        <item name="android:textDirection" tools:ignore="DuplicateDefinition" tools:targetApi="jelly_bean_mr1">
            rtl
        </item>
    </style>

    <style name="cardInsideLtr">
        <item name="android:layout_margin">2dp</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">rtl</item>
        <item name="android:background">@android:drawable/list_selector_background</item>
        <item name="android:layout_gravity">left</item>
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">ltr</item>
        <item name="android:textDirection" tools:ignore="DuplicateDefinition" tools:targetApi="jelly_bean_mr1">
            ltr
        </item>
    </style>

    <style name="LinearRtl">
        <item name="android:layout_gravity">right</item>
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">rtl</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">rtl</item>
    </style>

    <style name="LinearLtr">
        <item name="android:layout_gravity">left</item>
        <item name="android:layoutDirection" tools:targetApi="jelly_bean_mr1">ltr</item>
        <item name="android:textDirection" tools:targetApi="jelly_bean_mr1">ltr</item>
    </style>


    //DatePicker

    <style name="mdtp_time_label">
        <item name="android:textSize">@dimen/mdtp_time_label_size</item>
        <item name="android:textColor">@color/mdtp_numbers_text_color</item>
    </style>

    <style name="mdtp_ampm_label">
        <item name="android:textSize">@dimen/mdtp_ampm_label_size</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/mdtp_ampm_text_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mdtp_ActionButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/mdtp_material_button_height</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="mdtp_ActionButton.Text" tools:ignore="NewApi">
        <item name="android:textSize">@dimen/mdtp_material_button_textsize</item>
        <item name="android:singleLine">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:background">@drawable/mdtp_material_button_background</item>
        <item name="android:minWidth">@dimen/mdtp_material_button_minwidth</item>
        <item name="android:paddingLeft">@dimen/mdtp_material_button_textpadding_horizontal</item>
        <item name="android:paddingRight">@dimen/mdtp_material_button_textpadding_horizontal</item>
        <item name="android:textColor">@color/YellowLight</item>
        <item name="android:textAllCaps">true</item>
    </style>


    <style name="NavigationDrawerStyle">
        <item name="android:textSize">18sp</item>
        <item name="android:typeface">monospace</item>
    </style>
