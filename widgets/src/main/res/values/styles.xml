<resources xmlns:android="urn:oasis:names:tc:xliff:document:1.2" xmlns:tools="http://schemas.android.com/tools">

    <style name="AppTheme" parent="AppTheme.Base.Light" />

    <style name="AppTheme.Transparent" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionMenuTextColor">@color/WhiteColor</item>

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme.Base.Light" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/BlackColor</item>
        <item name="android:actionMenuTextColor">@color/WhiteColor</item>
</style>

    <style name="BaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorControlActivated">@color/WhiteColor</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


    <style name="MyEditTextStyle" parent="@android:style/TextAppearance.Widget.EditText">
        <item name="android:background">@color/WhiteColor</item>
        //NO UNDERBAR
        //COMMON HEIGHT
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">#fff</item>
    </style>

    <style name="checkBoxStyleW" parent="Base.Theme.AppCompat">

        <item name="android:textColorSecondary">@color/YellowLight</item>
        <item name="android:textColor">@color/WhiteColor</item>
        <item name="android:buttonTint" tools:targetApi="lollipop">@color/WhiteColor</item>
        <item name="android:button">@color/WhiteColor</item>

    </style>
